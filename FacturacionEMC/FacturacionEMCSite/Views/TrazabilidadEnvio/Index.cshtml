@using FacturacionEMCSite.StringResources;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/scriptsSite/trazabilidadEnvio/jsIndex.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
<script>
    var urlGuardarTrazabilidadEnvio = '@Url.Action("GuardarTrazabilidadEnvio", "TrazabilidadEnvio")';
</script>


<div class="card" style="margin-top:5%;">
    <div class="card-body">
        <div class="form-horizontal" style="color:dimgray">

            <div class="form-group row">
                <div class="col-md-8">
                    <h4 style="color:dimgray"> @Resources.TraceabilityNew</h4>
                </div>
                <div class="col-md-3 text-md-right">
                    <a href='@Url.Action("About", "TrazabilidadEnvio")' ; class="btn btn-primary" onclick="">@Resources.TraceabilityEdit</a>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3 text-md-right">
                    <label class="control-label">@Resources.Name *</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="nombreCompleto" class="form form-control" />
                </div>
                <div class="col-md-3 text-md-right">
                    <label class="control-label">@Resources.DocumentId *</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="dni" class="form form-control" />
                </div>
                <div class="col-md-3 text-md-right">
                    <label class="control-label">@Resources.Address *</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="direccion" class="form form-control" />
                </div>
                <div class="col-md-3 text-md-right">
                    <label class="control-label">@Resources.PhoneNumber *</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="telefono" class="form form-control" />
                </div>
                <div class="col-md-3 text-md-right">
                    <label class="control-label">@Resources.Email *</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="email" class="form form-control" />
                </div>
                <div class="col-md-3 text-md-right">
                    <label class="control-label">Fecha Llegada </label>
                </div>
                <div class="col-md-8">
                    <input type="date" id="fechaLlegada" class="form form-control" disabled />
                </div>
                <div class="col-md-3 text-md-right">
                    <label class="control-label">@Resources.Description * </label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="observacion" class="form form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-3 text-md-right">
                    <label class="control-label">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                </div>
                <div class="col-md-12">
                    <input type="button" onclick="GuardarTrazabilidadEnvio();" class="btn btn-success form-control" value=@Resources.Save />
                </div>
            </div>

            <hr />

            <div id="imgns" class="form-group row">
            </div>


        </div>
    </div>
</div>