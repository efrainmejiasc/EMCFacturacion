	.nav li a {
		background-color: #000;
		color: #fff;
		text-decoration: none;
		padding: 10px 12px;
		display: block;
	}

		.nav li a:hover {
			background-color: #434343;
		}

	.nav li ul {
		display: none;
		position: absolute;
		min-width: 140px;
	}

	.nav li:hover > ul {
		display: block;
	}

	.nav li ul li {
		position: relative;
	}

		.nav li ul li ul {
			right: -140px;
			top: 0px;
		}

</style>

