<!DOCTYPE html>
<html lang="es-mx">
<head>
    <!-- Required meta tags -->
    <meta http-equiv="content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>EMC-Facturacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <!-- <link rel="stylesheet" href="~/FacturacionEMCSite/styles.css" asp-append-version="true" /> -->  

    <!-- plugins:css -->
    <link rel="stylesheet" href="~/content/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/content/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/content/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/content/assets/vendors/jquery-bar-rating/css-stars.css">
    <link rel="stylesheet" href="~/content/assets/vendors/font-awesome/css/font-awesome.min.css" />
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/content/assets/css/demo_1/style.css">
    <!-- End layout styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
</head>
<body>
    
    
    <div class="container-scroller">
         @await Html.PartialAsync("_sidebar")

        <div class="container-fluid page-body-wrapper">

            @await Html.PartialAsync("_navbar")

            <div class="main-panel">

                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </div>  
        </div>


        </div>
        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Seguro de cerrar sesión?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Selecciona salir sesión, en caso de estar seguro de finalizar su sesión</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                        <a class="btn btn-danger" href="~/Home/Logout">Salir</a>
                    </div>
                </div>
            </div>
        </div>




        <!-- plugins:js -->
        <script src="~/content/assets/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script src="~/content/assets/vendors/jquery-bar-rating/jquery.barrating.min.js"></script>
        <script src="~/content/assets/vendors/chart.js/Chart.min.js"></script>
        <script src="~/content/assets/vendors/flot/jquery.flot.js"></script>
        <script src="~/content/assets/vendors/flot/jquery.flot.resize.js"></script>
        <script src="~/content/assets/vendors/flot/jquery.flot.categories.js"></script>
        <script src="~/content/assets/vendors/flot/jquery.flot.fillbetween.js"></script>
        <script src="~/content/assets/vendors/flot/jquery.flot.stack.js"></script>
        <script src="~/content/assets/js/jquery.cookie.js" type="text/javascript"></script>
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="~/content/assets/js/off-canvas.js"></script>
        <script src="~/content/assets/js/hoverable-collapse.js"></script>
        <script src="~/content/assets/js/misc.js"></script>
        <script src="~/content/assets/js/settings.js"></script>
        <script src="~/content/assets/js/todolist.js"></script>
        <!-- endinject -->
        <!-- End custom js for this page -->



        @RenderSection("scripts", required: false)


</body>
</html>


